<!--shows profile, followers, posts, allows to create post-->

<section class="position-relative justify-content-center ">
  <div>
    <form class="user-info">
      <div class="user-icon"></div>
      <div class="username"><strong>{{{user.username}}}</strong></div>
      <div class="follow-count">
        <p> following</p>
        <p> followers</p>
      </div>
      <button type="button" class="edit-profile-btn">Edit Profile</button>
    </form>
  </div>
</section>

<!--Div to allow user to see user posts-->
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/user/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
